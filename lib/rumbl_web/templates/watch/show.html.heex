<div class="row">
  <div class="column column-60">
    <h1><%= @video.title %></h1>

    <div id="video" data-id={@video.id} data-player-id={player_id(@video)}></div>
  </div>

  <div class="column annotations">
    <h3>Annotations</h3>
    <div id="msg-container">
    </div>
    <div>
      <textarea id="msg-input" cols="30" rows="3"></textarea>
      <button id="msg-submit" class="button column" type="submit">Post</button>
    </div>
  </div>
</div>
